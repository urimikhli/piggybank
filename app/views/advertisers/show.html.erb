<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @advertiser.name %>
</p>

<p>
  <b>Conversion factor:</b>
  <%= @advertiser.conversion_factor %>
</p>

<p>
  <b>Dollar amount:</b>
  <%= @advertiser.dollar_amount %>
</p>


<p>Redemptions</p>
<table>
  <tr>
    <th>developer</th>
    <th>Game</th>
    <th>redeemed</th>
    <th></th>
    <th></th>
  </tr>
<% rdp=0 %>
<% @redemption_by_adv.each do |redeemed| %>
   <% rdp += redeemed.sum_amount %>
  <tr>
    <td><%= redeemed.developer_name %></td>
    <td><%= redeemed.game_name %></td>
    <td><%= redeemed.sum_amount %></td>
    <td></td>
    <td></td>
  </tr>
<% end %>
</table>



