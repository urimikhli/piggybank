<h1>Listing advertisers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Conversion factor</th>
    <th>Dollar amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @advertisers.each do |advertiser| %>
  <tr>
    <td><%= advertiser.name %></td>
    <td><%= advertiser.conversion_factor %></td>
    <td><%= advertiser.dollar_amount %></td>
    <td><%= link_to 'Show', advertiser %></td>
    <td><%= link_to 'Edit', edit_advertiser_path(advertiser) %></td>
    <td><%= link_to 'Destroy', advertiser, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

