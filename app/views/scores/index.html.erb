<h1>scores</h1>

<h2><span><%= @announcment %></span></h2>
<table>
  <tr align=left>
    <th>Game</th>
    <th>Developer</th>
    <th>Score</th>
    <th>Redeem</th>
  </tr>
<% scr=0 %>
<% i=0 %>
<% @scores_by_game.each do |score| %>
   <% scr += score.sum_score %>
   <% sum_redeem=0 %>
   <% sum_total=score.sum_score %>
      <% @redemption_by_game.each do |redemptions| %>
      
         <%
            if (redemptions.game_name == score.game_name)  
              sum_redeem = redemptions.sum_amount
              sum_total = score.sum_score - sum_redeem
               #puts "redemption: #{redemptions.game_name}: | games: #{score.game_name} |score #{score.sum_score}| redeem: #{sum_redeem}| sum #{sum_total}<P>"
              break
            end
          %>
      <%end%>
  <tr>
    <td><%= score.game_name %></td>
    <td><%= score.developer_name %></td>
    <td><%= sum_total %></td>
    <td>
      <% @adver.each do |advertiser| %>
          <%
              conv_factor = advertiser.conversion_factor 
              dollar_amount = advertiser.dollar_amount  
              redemption_amount = 100 * dollar_amount / conv_factor
          %>
                      
          <% if sum_total <= 1000 && sum_total >= 500 && redemption_amount <= 500 %>
          
                Redeem <%= link_to('500', scores_path({:amount=>500,:advertiser=>"#{advertiser.name}",:game_name=>score.game_name,:developer_name=>score.developer_name,:redemption_type=>'web'}),{:id =>'redeemPoints'}) %> points get a $10 <%= "#{advertiser.name} " %> gift card
                <%break%>
          <% elsif sum_total >= 1000 && redemption_amount >= 501 && redemption_amount <= 1000 %>
                Redeem <%= link_to('1000', scores_path({:amount=>1000,:advertiser=>"#{advertiser.name}",:game_name=>score.game_name,:developer_name=>score.developer_name,:redemption_type=>'web'}),{:id =>'redeemPoints'}) %> points get a $5 <%= "#{advertiser.name} " %> Gift card
                <%break%>
          <% end %>
    
      <%end%>
    </td>      
  </tr>
<% end %>
</table>
<P></P>
  
<table>
  <tr>
    <th>Advertiser</th>
    <th>Game</th>
    <th>redeemed</th>
    <th></th>
    <th></th>
  </tr>
<% rdp=0 %>
<% @redemption_by_adv.each do |redeemed| %>
   <% rdp += redeemed.sum_amount %>
  <tr>
    <td><%= redeemed.advertiser_name %></td>
    <td><%= redeemed.game_name %></td>
    <td><%= redeemed.sum_amount %></td>
  </tr>
<% end %>
</table>

